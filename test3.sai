var writes::(String -> (File* -> (Bool, File*))) = s::String => {
    f::File* => {
        match s {
            | []     -> (true, f)
            | (c:cs) -> 
                let (succ, f') = write c f 
                in (case {
                    | succ == true -> (writes cs f')
                    | ?            -> (false, f') 
                })
        }
    }
}

var readLn::(File* -> (Bool, String, File*)) = f::File* => {
    let (succ, c, f') = read f
    in (case {
        | succ == true -> 
        match c {
            | '\n' -> (true, ['\n'], f')
            | ?    -> let (succ2, s, f2') = readLn f'
                        in (case {
                             | succ2 == true -> (true, (c:s), f2')
                             | ?             -> (false, (c:s), f2')
                            })
                }
        | ?            -> (false, [c], f')
    })
}

var prompt::(String -> (File* -> (File* -> (Bool, String, File*, File*)))) = s::String => {
    outf::File* => {
        inf::File* => {
            let (succ, outf') = writes s outf
            in (match succ {
                | true -> 
                    let (succ', line, inf') = readLn inf
                    in (match succ' {
                        | true -> (true, line, outf', inf')
                        | ?    -> (false, "", outf', inf')
                    })
                | ?    -> (false, "", outf', inf)
            })
        }
    }
}